  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "out",
    "rootDir": "src"
  },
  "include": ["./src", "index.ts"],
  "exclude": ["node_modules"]
}
